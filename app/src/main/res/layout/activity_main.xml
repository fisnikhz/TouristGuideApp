<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181818">

    <ImageView
        android:id="@+id/imageViewSkyline"
        android:layout_width="230dp"
        android:layout_height="106dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonCastle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/prizren" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Welcome to Prizren"
        android:textColor="#ffff"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSkyline" />

    <TextView
        android:id="@+id/textViewAttractions"
        android:layout_width="247dp"
        android:layout_height="17dp"
        android:text="Places that u can visit in Prizren"
        android:textColor="#ffff"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome" />

    <Button
        android:id="@+id/buttonCastle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="The Castle"
        app:backgroundTint="#00897B"
        app:layout_constraintBottom_toTopOf="@+id/buttonPark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonComment"
        android:layout_width="35dp"
        android:layout_height="46dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="173dp"
        android:drawableBottom="@android:drawable/btn_star_big_on"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/buttonPark"
        app:layout_constraintEnd_toStartOf="@+id/imageViewSkyline"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="195dp"
        android:text="Sharr mountains"
        app:backgroundTint="#00897B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonComment" />

    <Button
        android:id="@+id/buttonTheMosque"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Sinan Pasha Mosque"
        app:backgroundTint="#00897B"
        app:layout_constraintBottom_toTopOf="@+id/buttonCityMuseum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPark" />

    <Button
        android:id="@+id/buttonCityMuseum"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="The League of prizren museum"
        app:backgroundTint="#00897B"
        app:layout_constraintBottom_toTopOf="@+id/textViewHotelsRestaurants"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTheMosque" />

    <TextView
        android:id="@+id/textViewHotelsRestaurants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="78dp"
        android:text="Hotels / Restaurants"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCityMuseum" />

    <Button
        android:id="@+id/buttonRestaurants"
        android:layout_width="145dp"
        android:layout_height="46dp"
        android:layout_marginBottom="16dp"
        android:text="Restaurants"
        app:backgroundTint="#00897B"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonHotels"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonHotels"
        android:layout_width="140dp"
        android:layout_height="46dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:text="Hotels"
        app:backgroundTint="#00897B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>